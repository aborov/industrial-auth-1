<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <%= render "users/user", user: @user %>
  </div>
</div>

<% if policy(@user).show? %>
  <div class="row mb-2">
    <div class="col-md-6 offset-md-3">
      <%= render "users/profile_nav", user: @user %>
    </div>
  </div>

  <% if policy(@user).view_photos? %>
    <% @user.own_photos.each do |photo| %>
      <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
          <%= render "photos/photo", photo: photo %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center">This user's photos are private.</p>
  <% end %>
<% end %>
